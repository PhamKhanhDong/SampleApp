<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.user.name.max_length),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url, class: "image_post", width: "100"  if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t ".post" %> <%= time_ago_in_words(micropost.created_at) %> <%= t ".ago" %>
    <% if current_user? micropost.user %>
      <%= link_to "delete", micropost, method: :delete,
        data: { confirm: t(".you_sure") } %>
    <% end %>
  </span>
</li>
