<% provide :title, t(".signup_title") %>
<h1><%= t ".signup_title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t(".txt_name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t(".txt_email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t(".txt_password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t(".txt_comfirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t(".btn_create_acount"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
