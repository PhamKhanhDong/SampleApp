<% provide :title, t(".title_login") %>
<h1><%= t ".title_login" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email, t(".txt_email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t(".txt_password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t(".btn_login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t ".txt_new_user" %> <%= link_to t(".signup_btn_text"), signup_path %></p>
  </div>
</div>
